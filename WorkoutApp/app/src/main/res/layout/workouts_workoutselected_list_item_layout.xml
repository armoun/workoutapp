<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#FFF"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/selectedworkout_image_exercises"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chest_red"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/workoutselected_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Title"
            android:background="#FFF"
            android:padding="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25dp"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/workoutselected_item_reps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="10, 10, 10"
            android:background="#FFF"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:layout_marginTop="-5dp">
        </TextView>
    </LinearLayout>

</LinearLayout>